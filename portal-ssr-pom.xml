                <!--<groupId>org.apache.maven.plugins</groupId>-->
                <!--<artifactId>maven-assembly-plugin</artifactId>-->
                <!--&lt;!&ndash;<configuration>&ndash;&gt;-->
                    <!--&lt;!&ndash;<finalName>portal-resources</finalName>&ndash;&gt;-->
                <!--&lt;!&ndash;</configuration>&ndash;&gt;-->
